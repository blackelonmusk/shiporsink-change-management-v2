@tailwind base;
@tailwind components;
@tailwind utilities;

/* ============================================
   SHIP OR SINK BUSINESS SUITE - CHANGE MANAGEMENT
   Theme: Dark Mode (Zinc-based) + Orange Accents
   Updated: December 2024
   ============================================ */

/* === CSS VARIABLES === */
:root {
  /* Base Colors (Zinc scale - matches Vault/Tick/OKR) */
  --bg-primary: #0a0a0a;
  --bg-secondary: #18181b;
  --bg-elevated: #27272a;
  --bg-hover: #3f3f46;
  
  /* Borders */
  --border-default: #27272a;
  --border-hover: #3f3f46;
  --border-active: #52525b;
  
  /* Text */
  --text-primary: #ffffff;
  --text-secondary: #a1a1aa;
  --text-muted: #71717a;
  
  /* Orange Accent (Change Management) */
  --change-orange: #f97316;
  --change-orange-light: #fb923c;
  --change-orange-dark: #ea580c;
  --change-orange-muted: rgba(249, 115, 22, 0.15);
  --change-orange-border: rgba(249, 115, 22, 0.3);
  
  /* Status Colors (semantic - don't change) */
  --success: #10b981;
  --success-muted: rgba(16, 185, 129, 0.2);
  --warning: #f59e0b;
  --warning-muted: rgba(245, 158, 11, 0.2);
  --error: #ef4444;
  --error-muted: rgba(239, 68, 68, 0.2);
}

/* === BASE STYLES === */
html {
  scroll-behavior: smooth;
}

body {
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-family: 'Inter', system-ui, -apple-system, sans-serif;
  overflow-x: hidden;
  width: 100%;
  min-height: 100vh;
}

/* === GRID BACKGROUND PATTERN === */
.bg-grid {
  background-image: 
    linear-gradient(rgba(249, 115, 22, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(249, 115, 22, 0.03) 1px, transparent 1px);
  background-size: 50px 50px;
}

/* Alternative subtle grid */
.bg-grid-subtle {
  background-image: 
    linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
  background-size: 40px 40px;
}

/* === GRADIENT OVERLAYS === */
.gradient-hero {
  background: linear-gradient(135deg, 
    rgba(249, 115, 22, 0.12) 0%, 
    transparent 40%, 
    rgba(234, 88, 12, 0.08) 100%
  );
}

.gradient-radial {
  background: radial-gradient(
    ellipse at top,
    rgba(249, 115, 22, 0.15) 0%,
    transparent 50%
  );
}

/* === SCROLLBAR === */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--bg-secondary);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb {
  background: var(--bg-hover);
  border-radius: 4px;
  transition: background 0.2s ease;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--change-orange);
}

/* === SELECTION === */
::selection {
  background: rgba(249, 115, 22, 0.3);
  color: var(--text-primary);
}

/* === FOCUS STATES === */
*:focus-visible {
  outline: 2px solid var(--change-orange);
  outline-offset: 2px;
}

input:focus,
textarea:focus,
select:focus {
  outline: none;
  border-color: var(--change-orange) !important;
  box-shadow: 0 0 0 3px var(--change-orange-muted);
}

/* === TRANSITIONS === */
button,
a,
input,
textarea,
select,
.transition-all {
  transition-property: all;
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  transition-duration: 150ms;
}

/* === BUTTON STYLES === */
.btn-primary {
  background: linear-gradient(135deg, var(--change-orange), var(--change-orange-dark));
  color: #000;
  font-weight: 600;
  padding: 0.625rem 1.25rem;
  border-radius: 0.5rem;
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-primary:hover {
  background: linear-gradient(135deg, var(--change-orange-dark), #c2410c);
  transform: translateY(-1px);
  box-shadow: 0 10px 30px rgba(249, 115, 22, 0.25);
}

.btn-primary:active {
  transform: scale(0.98);
}

.btn-secondary {
  background: var(--bg-elevated);
  border: 1px solid var(--border-hover);
  color: var(--text-secondary);
  font-weight: 500;
  padding: 0.625rem 1.25rem;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-secondary:hover {
  background: var(--bg-hover);
  color: var(--text-primary);
  border-color: var(--border-active);
}

.btn-success {
  background: linear-gradient(135deg, #10b981, #059669);
  color: #fff;
  font-weight: 600;
  padding: 0.625rem 1.25rem;
  border-radius: 0.5rem;
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-success:hover {
  background: linear-gradient(135deg, #059669, #047857);
  transform: translateY(-1px);
  box-shadow: 0 10px 30px rgba(16, 185, 129, 0.25);
}

.btn-danger {
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: #fff;
  font-weight: 600;
  padding: 0.625rem 1.25rem;
  border-radius: 0.5rem;
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-danger:hover {
  background: linear-gradient(135deg, #dc2626, #b91c1c);
  transform: translateY(-1px);
}

.btn-ghost {
  background: transparent;
  color: var(--text-secondary);
  padding: 0.5rem 0.75rem;
  border-radius: 0.375rem;
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-ghost:hover {
  background: var(--bg-elevated);
  color: var(--text-primary);
}

/* === CARD STYLES === */
.card {
  background: var(--bg-secondary);
  border: 1px solid var(--border-default);
  border-radius: 0.75rem;
  transition: all 0.2s ease;
}

.card:hover {
  border-color: var(--border-hover);
}

.card-hover {
  transition: all 0.2s ease;
}

.card-hover:hover {
  transform: translateY(-2px);
  border-color: var(--change-orange-border);
  box-shadow: 0 10px 40px rgba(249, 115, 22, 0.1);
}

.card-interactive {
  cursor: pointer;
  transition: all 0.2s ease;
}

.card-interactive:hover {
  transform: translateY(-4px);
  border-color: var(--change-orange);
  box-shadow: 
    0 20px 40px rgba(0, 0, 0, 0.3),
    0 0 0 1px var(--change-orange-border);
}

/* === BADGE STYLES === */
.badge {
  padding: 0.25rem 0.625rem;
  border-radius: 0.25rem;
  font-size: 0.6875rem;
  font-weight: 500;
  display: inline-flex;
  align-items: center;
  gap: 0.375rem;
}

.badge-orange {
  background: var(--change-orange-muted);
  color: var(--change-orange-light);
  border: 1px solid var(--change-orange-border);
}

.badge-success {
  background: var(--success-muted);
  color: #34d399;
  border: 1px solid rgba(16, 185, 129, 0.3);
}

.badge-warning {
  background: var(--warning-muted);
  color: #fbbf24;
  border: 1px solid rgba(245, 158, 11, 0.3);
}

.badge-error {
  background: var(--error-muted);
  color: #f87171;
  border: 1px solid rgba(239, 68, 68, 0.3);
}

/* === STAT CARDS === */
.stat-card {
  background: var(--bg-secondary);
  border: 1px solid var(--border-default);
  border-radius: 0.75rem;
  padding: 1.25rem;
  transition: all 0.2s ease;
}

.stat-card:hover {
  border-color: var(--change-orange-border);
  transform: translateY(-2px);
}

.stat-value {
  font-size: 2rem;
  font-weight: 700;
  background: linear-gradient(135deg, var(--change-orange), var(--change-orange-light));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* === INPUT STYLES === */
.input {
  background: var(--bg-secondary);
  border: 1px solid var(--border-default);
  border-radius: 0.5rem;
  padding: 0.625rem 0.875rem;
  color: var(--text-primary);
  width: 100%;
  transition: all 0.2s ease;
}

.input::placeholder {
  color: var(--text-muted);
}

.input:hover {
  border-color: var(--border-hover);
}

.input:focus {
  border-color: var(--change-orange);
  box-shadow: 0 0 0 3px var(--change-orange-muted);
}

/* === PROGRESS BARS === */
.progress-bar {
  height: 0.5rem;
  border-radius: 9999px;
  background: var(--bg-elevated);
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  border-radius: 9999px;
  transition: width 0.5s ease;
}

/* Gradient based on value (red → yellow → green) */
.progress-gradient-low {
  background: linear-gradient(90deg, #ef4444, #f59e0b);
}

.progress-gradient-mid {
  background: linear-gradient(90deg, #f59e0b, #84cc16);
}

.progress-gradient-high {
  background: linear-gradient(90deg, #84cc16, #10b981);
}

/* === ANIMATIONS === */

/* Shimmer */
@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.animate-shimmer {
  animation: shimmer 2s infinite;
}

/* Fade In */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.animate-fade-in {
  animation: fadeIn 0.3s ease-out;
}

/* Slide Up */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-slide-up {
  animation: slideUp 0.4s ease-out;
}

/* Scale In */
@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.animate-scale-in {
  animation: scaleIn 0.2s ease-out;
}

/* Pulse Glow */
@keyframes pulseGlow {
  0%, 100% {
    box-shadow: 0 0 20px rgba(249, 115, 22, 0.4);
  }
  50% {
    box-shadow: 0 0 40px rgba(249, 115, 22, 0.7);
  }
}

.animate-pulse-glow {
  animation: pulseGlow 2s ease-in-out infinite;
}

/* Ripple */
@keyframes ripple {
  0% {
    transform: scale(0);
    opacity: 1;
  }
  100% {
    transform: scale(4);
    opacity: 0;
  }
}

.animate-ripple {
  animation: ripple 0.6s ease-out;
}

/* Spin Slow */
@keyframes spin {
  to { transform: rotate(360deg); }
}

.animate-spin-slow {
  animation: spin 3s linear infinite;
}

/* Float */
@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

/* Bounce Subtle */
@keyframes bounceSoft {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-5px); }
}

.animate-bounce-soft {
  animation: bounceSoft 1s ease-in-out infinite;
}

/* === SKELETON LOADING === */
.skeleton {
  background: linear-gradient(
    90deg,
    var(--bg-elevated) 0%,
    var(--bg-hover) 50%,
    var(--bg-elevated) 100%
  );
  background-size: 200% 100%;
  animation: shimmer 1.5s ease-in-out infinite;
  border-radius: 0.5rem;
}

/* === AI CHAT STYLES === */
.ai-badge {
  background: var(--change-orange-muted);
  border: 1px solid var(--change-orange-border);
  color: var(--change-orange-light);
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
  font-size: 0.6875rem;
  font-weight: 500;
}

.ai-message {
  background: var(--bg-secondary);
  border: 1px solid var(--border-default);
  border-radius: 0.75rem;
  padding: 1rem;
}

.user-message {
  background: linear-gradient(135deg, var(--change-orange-muted), rgba(249, 115, 22, 0.1));
  border: 1px solid var(--change-orange-border);
  border-radius: 0.75rem;
  padding: 1rem;
}

/* Typing indicator */
.typing-dot {
  width: 0.5rem;
  height: 0.5rem;
  background: var(--change-orange);
  border-radius: 50%;
  animation: bounceSoft 1.4s infinite ease-in-out;
}

.typing-dot:nth-child(1) { animation-delay: 0s; }
.typing-dot:nth-child(2) { animation-delay: 0.2s; }
.typing-dot:nth-child(3) { animation-delay: 0.4s; }

/* === MILESTONE TIMELINE === */
.milestone-icon {
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-elevated);
  border: 2px solid var(--border-default);
  transition: all 0.3s ease;
}

.milestone-icon.completed {
  background: linear-gradient(135deg, var(--change-orange), var(--change-orange-dark));
  border-color: var(--change-orange);
}

.milestone-today {
  border-color: var(--change-orange);
  box-shadow: 0 0 0 4px var(--change-orange-muted);
  animation: pulseGlow 2s ease-in-out infinite;
}

.milestone-overdue {
  border-color: var(--error);
  background: var(--error-muted);
}

.milestone-card {
  background: var(--bg-secondary);
  border: 1px solid var(--border-default);
  border-radius: 0.75rem;
  padding: 1rem 1.25rem;
  transition: all 0.2s ease;
}

.milestone-card:hover {
  border-color: var(--border-hover);
  transform: translateX(4px);
}

.milestone-card.overdue {
  border-color: rgba(239, 68, 68, 0.5);
  background: rgba(239, 68, 68, 0.05);
}

/* === STAKEHOLDER CARD STYLES === */
.stakeholder-card {
  background: var(--bg-secondary);
  border: 2px solid var(--border-default);
  border-radius: 0.75rem;
  padding: 1.25rem;
  transition: all 0.2s ease;
}

.stakeholder-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.stakeholder-card.champion {
  border-color: rgba(16, 185, 129, 0.5);
}

.stakeholder-card.supporter {
  border-color: rgba(34, 211, 238, 0.5);
}

.stakeholder-card.neutral {
  border-color: rgba(250, 204, 21, 0.5);
}

.stakeholder-card.resistant {
  border-color: rgba(239, 68, 68, 0.5);
}

.stakeholder-card.blocker {
  border-color: rgba(239, 68, 68, 0.7);
  background: rgba(239, 68, 68, 0.05);
}

/* === AVATAR STYLES === */
.avatar {
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 0.875rem;
  background: linear-gradient(135deg, var(--change-orange), var(--change-orange-dark));
  color: #000;
}

.avatar-lg {
  width: 3.5rem;
  height: 3.5rem;
  font-size: 1.125rem;
}

/* === MODAL STYLES === */
.modal-backdrop {
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(4px);
}

.modal-content {
  background: var(--bg-secondary);
  border: 1px solid var(--border-default);
  border-radius: 1rem;
  box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
}

/* === TOAST STYLES === */
.toast {
  background: var(--bg-secondary);
  border: 1px solid var(--border-default);
  border-radius: 0.5rem;
  padding: 1rem;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.toast-success {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(16, 185, 129, 0.1));
  border-color: rgba(16, 185, 129, 0.3);
}

.toast-error {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.2), rgba(239, 68, 68, 0.1));
  border-color: rgba(239, 68, 68, 0.3);
}

/* === SUITE APPS STYLES === */
.suite-app-card {
  background: var(--bg-secondary);
  border: 1px solid var(--border-default);
  border-radius: 0.75rem;
  padding: 0.75rem;
  transition: all 0.2s ease;
}

.suite-app-card:hover {
  border-color: var(--border-hover);
  background: var(--bg-elevated);
  transform: translateY(-2px);
}

.suite-app-icon {
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
}

.suite-app-card:hover .suite-app-icon {
  transform: scale(1.1);
}

/* === TEMPLATE CARD STYLES === */
.template-card {
  background: var(--bg-secondary);
  border: 1px solid var(--border-default);
  border-radius: 0.75rem;
  padding: 1.25rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.template-card:hover {
  border-color: var(--change-orange-border);
  background: rgba(249, 115, 22, 0.05);
  transform: translateY(-2px);
}

.template-card.selected {
  border-color: var(--change-orange);
  background: var(--change-orange-muted);
}

/* === MOBILE RESPONSIVENESS === */
@media (max-width: 640px) {
  body {
    overflow-x: hidden;
    width: 100%;
  }

  .container {
    max-width: 100%;
    overflow-x: hidden;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  /* Stack buttons on mobile */
  .flex.gap-2,
  .flex.gap-3 {
    flex-wrap: wrap;
  }

  /* Full-width inputs on mobile */
  input[type="text"],
  input[type="email"],
  textarea {
    max-width: 100%;
    width: 100%;
  }

  /* Modal adjustments */
  .modal-content {
    margin: 1rem;
    max-width: calc(100vw - 2rem);
    max-height: calc(100vh - 2rem);
    overflow-y: auto;
  }

  /* Timeline adjustments */
  .milestone-icon {
    width: 2.5rem;
    height: 2.5rem;
  }

  /* Stats grid */
  .stat-card {
    padding: 1rem;
  }

  .stat-value {
    font-size: 1.5rem;
  }
}

/* === TAILWIND OVERRIDES FOR ZINC THEME === */
/* These ensure any gray-* classes render as zinc-* */

.bg-gray-900 { background-color: #0a0a0a !important; }
.bg-gray-800 { background-color: #18181b !important; }
.bg-gray-700 { background-color: #27272a !important; }
.bg-gray-600 { background-color: #3f3f46 !important; }

.border-gray-700 { border-color: #27272a !important; }
.border-gray-600 { border-color: #3f3f46 !important; }

.text-gray-400 { color: #a1a1aa !important; }
.text-gray-300 { color: #d4d4d8 !important; }
.text-gray-500 { color: #71717a !important; }

/* Hover states */
.hover\:bg-gray-700:hover { background-color: #27272a !important; }
.hover\:bg-gray-600:hover { background-color: #3f3f46 !important; }
.hover\:border-gray-600:hover { border-color: #3f3f46 !important; }

/* === ORANGE ACCENT OVERRIDES === */
/* Replace blue/purple with orange throughout */

.bg-blue-600,
.bg-blue-500,
.bg-purple-600,
.bg-purple-500 {
  background: linear-gradient(135deg, var(--change-orange), var(--change-orange-dark)) !important;
}

.text-blue-400,
.text-blue-500,
.text-purple-400,
.text-purple-500 {
  color: var(--change-orange-light) !important;
}

.border-blue-500,
.border-purple-500 {
  border-color: var(--change-orange) !important;
}

.ring-blue-500,
.ring-purple-500 {
  --tw-ring-color: var(--change-orange) !important;
}

/* Keep semantic colors intact */
/* Green for success, red for danger, yellow for warning */

/* === CONFETTI === */
@keyframes confetti-fall {
  0% {
    transform: translateY(-100px) rotate(0deg);
    opacity: 1;
  }
  100% {
    transform: translateY(100vh) rotate(720deg);
    opacity: 0;
  }
}

.confetti {
  position: fixed;
  width: 10px;
  height: 10px;
  animation: confetti-fall 3s ease-out forwards;
}

/* === END OF STYLES === */
